<%= flash[:destroy] %>
<h1>Books</h1>
<table>
<tr>
<th>title</th>
<th>body</th>
<th></th>
<th></th>
<th></th>
</tr>
<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td><%= link_to 'show',book_path(book.id) %></td>
 <td><%= link_to 'edit',edit_book_path(book.id) %></td>
 <td><%= link_to 'destroy',book_path(book.id), method: :delete, "data-confirm" => "Are You Sure?" %></td>
</tr>
<%end%>
</table>

<h2>New book</h2>
<%= render 'books/form', book: @book %>
<%= form_for(@book,url: books_path) do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'CreatBook' %>
<% end %>
